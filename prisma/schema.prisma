// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  playlists Playlist[] @relation("UserPlaylists")
  songs Song[] @relation("UserSongs")
  albums Album[] @relation("UserAlbums")
  artist Boolean @default(false)
}

model Playlist {
  id        Int     @id @default(autoincrement())
  name     String
  authors User[] @relation("UserPlaylists")
  songs     Song[]   @relation("PlaylistSongs")
}

model Song {
  id    Int     @id @default(autoincrement())
  name  String
  authors User[] @relation("UserSongs")
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId Int
  playlists Playlist[] @relation("PlaylistSongs")
}

model Album {
  id    Int     @id @default(autoincrement())
  name  String
  authors User[] @relation("UserAlbums")
  songs Song[]
}
